{
  "id": "org.dpsoftware.fireflyluciferin",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "/app/fireflyluciferin/bin/FireflyLuciferin",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=pulseaudio",
    "--socket=x11",
    "--socket=wayland",
    "--device=all",
    "--filesystem=home",
    "--env=LD_LIBRARY_PATH=/app/lib",
    "--env=FLATPAK_ENV=1"
  ],
  "modules": [
    "shared-modules/libayatana-appindicator/libayatana-appindicator-gtk3.json",
    {
      "name": "fireflyluciferin",
      "buildsystem": "simple",
      "build-commands": [
        "ar x FireflyLuciferinLinux.deb",
        "tar xvf data.tar.zst",
        "mkdir -p /app/fireflyluciferin",
        "cp -r opt/fireflyluciferin/* /app/fireflyluciferin",
        "install -Dm644 org.dpsoftware.fireflyluciferin.desktop /app/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 org.dpsoftware.fireflyluciferin.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png",
        "install -Dm644 org.dpsoftware.fireflyluciferin.appdata.xml /app/share/share/appdata/${FLATPAK_ID}.appdata.xml",
        "ls -la"
      ],
      "sources": [
        {
          "type": "file",
          "path": "FireflyLuciferinLinux.deb"
        },
        {
          "type": "file",
          "path": "org.dpsoftware.fireflyluciferin.desktop"
        },
        {
          "type": "file",
          "path": "org.dpsoftware.fireflyluciferin.appdata.xml"
        },
        {
          "type": "file",
          "path": "org.dpsoftware.fireflyluciferin.png"
        }
      ]
    },
    {
      "name": "libnotify",
      "buildsystem": "meson",
      "config-opts": [
        "-Dman=false",
        "-Dgtk_doc=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libnotify/0.8/libnotify-0.8.3.tar.xz",
          "sha256": "ee8f3ef946156ad3406fdf45feedbdcd932dbd211ab4f16f75eba4f36fb2f6c0",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 13149,
            "url-template": "https://download.gnome.org/sources/libnotify/$major.$minor/libnotify-$version.tar.xz"
          }
        }
      ]
    }
  ]
}
